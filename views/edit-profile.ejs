<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ./partials/head.ejs %>
        <link rel="stylesheet" type="text/css" href="/css/footer.css">
        <link rel="stylesheet" type="text/css" href="/css/dropdown.css">
    </head>
    <body>
        <% include ./partials/handle-nav.ejs %>

		<div class="container">
		<h2 class="text-center">Edit Profile</h1>
			<div class="row">
				<!-- left column -->
				<div class="col-md-4 col-sm-6 col-xs-12">
					<div class="text-center">
						<img src="http://lorempixel.com/200/200/people/9/" class="avatar img-circle img-thumbnail" alt="avatar">
						<h6>Upload a different photo...</h6>
						<input type="file" class="text-center center-block well well-sm">
					</div>
				</div>


				<!-- edit form column -->
				<div class="col-md-8 col-sm-6 col-xs-12 personal-info">
					
					<% if (user.accountType == "google"){ %>
						<div class="alert alert-info alert-dismissable">
					        <a class="panel-close close" data-dismiss="alert">Ã—</a> 
					        <i class="fa fa-coffee"></i>
					        You cannot modify password and name of a Google account here. Do so on Google.
					    </div>
					<% } %>
					<h3>Personal info</h3>
					<form id="form" class="form-horizontal" role="form" action="/users/<%= user.id %>/edit" method="post">
						<%if (user.accountType == "local"){ %>
							<div class="form-group">
								<label class="col-lg-3 control-label">Full name:</label>
								<div class="col-lg-8">
									<input name="name" class="form-control" type="text" value="<%= user.local.username %>">
								</div>
							</div>
							<div class="form-group">
								<label class="col-lg-3 control-label">Password:</label>
								<div class="col-lg-8">
									<input id="password" name="password" class="form-control" type="password" value="<%= user.local.password %>">
								</div>
							</div>
							<div class="form-group">
								<label class="col-lg-3 control-label">Confirm password:</label>
								<div class="col-lg-8">
									<input id="confirm" name="confirmPassword" class="form-control" type="password" value="<%= user.local.password %>">
								</div>
							</div>
						<%}%>
							<div class="form-group">
								<label class="col-lg-3 control-label">Phone number:</label>
								<div class="col-lg-8">
									<input name="phone" class="form-control" type="text" value="<%= user.phone %>">
								</div>
							</div>

							<div class="form-group">
								<label class="control-label">Description</label>
								<textarea name="description" class="form-control" rows="3"
									><%= user.description %></textarea>
						
							</div>



							<div class="form-group">
								<label class="col-md-3 control-label"></label>
								<div class="col-md-8">
									<input class="btn btn-primary" value="Save Changes" type="submit">
									<span></span>
									<input id="cancel" class="btn btn-default" value="Cancel" type="reset">
								</div>
							</div>
					</form>

					<div id="alertPassword" style="display:none" class="alert alert-danger text-center">
				        Passwords do not match!
				    </div>
				</div>
			</div>
		</div>

        <% include ./partials/footer.ejs %>
        <script type="text/javascript">
        	$("#form").submit(function(event){
        		if ($("#password").val() != $("#confirm").val()){
        			event.preventDefault();
        			$("#alertPassword").css("display","block");
        		}
        	});
        	$("#cancel").click(function(event){
    			$("#alertPassword").css("display","none");
        	});
        </script>
    </body>
</html>
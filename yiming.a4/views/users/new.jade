extends ../layout

block content
    .container
     h1.
      #{title}
    p
     .container
      form#formAddUser(name="adduser",method="post",action="/users")
       p Name:
        input#inputUserName(type="text", placeholder="ex. John Smith", name="name")
       p Email:
        input#inputEmail(type="text", placeholder="ex. example@email.com", name="email")
       p Password:
        input(type="password", name="password", id="inputPassword")    
       p Confirm Password:
        input(type="password",name="passwordr", id="inputPasswordr")
       p
        button#btnSubmit(type="submit") submit
       if success==false
          p  
           .alert-warning
               p #{message}
       p
        a(href='/') Back
     script.
      var password = document.getElementById("inputPassword")
       , confirm_password = document.getElementById("inputPasswordr");
      function validatePassword() {
       if (password.value != confirm_password.value) {
        confirm_password.setCustomValidity("Passwords Don't Match");
       } else {
       confirm_password.setCustomValidity('');
       }
      }
      password.onchange = validatePassword;
      confirm_password.onkeyup = validatePassword;